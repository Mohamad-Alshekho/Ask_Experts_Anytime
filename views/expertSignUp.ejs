    <body class="login">
        <div class="container sm:px-10">
            <div class="block xl:grid grid-cols-2 gap-4">
                <!-- BEGIN: Register Info -->
                <div class="hidden xl:flex flex-col min-h-screen">
                    <a href="/feed" class="-intro-x flex items-center pt-5">
                        <img alt="Midone - HTML Admin Template" class="w-6" src="/dist/images/logo.svg">
                        <span class="text-white text-lg ml-3"> Ask Experts Anytime </span> 
                    </a>
                    <div class="my-auto">
                        <img alt="Midone - HTML Admin Template" class="-intro-x w-1/2 -mt-16" src="/dist/images/illustration.svg">
                        <div class="-intro-x text-white font-medium text-4xl leading-tight mt-10">
                            A few more clicks to 
                            <br>
                            sign up to your account.
                        </div>
                        <div class="-intro-x mt-5 text-lg text-white text-opacity-70 dark:text-slate-400">apply to be an expert</div>
                    </div>
                </div>
                <!-- END: Register Info -->
                <!-- BEGIN: Register Form -->
            
                <div class="h-screen xl:h-auto flex py-5 xl:py-0 my-10 xl:my-0">
                    <div class="my-auto mx-auto xl:ml-20 bg-white dark:bg-darkmode-600 xl:bg-transparent px-5 sm:px-8 py-8 xl:p-0 rounded-md shadow-md xl:shadow-none w-full sm:w-3/4 lg:w-2/4 xl:w-auto">
                        <h2 class="intro-x font-bold text-2xl xl:text-3xl text-center xl:text-left">
                            Expert Sign Up 
                        </h2>
                        <div class="intro-x mt-2 text-slate-400 dark:text-slate-400 xl:hidden text-center">A few more clicks to sign in to your account. Manage all your e-commerce accounts in one place</div>
                        <%- include('./partials/messages.ejs') %> 
                        <div class="intro-x mt-8">
                            
                            <form action="/auth/expertSignUp" method="POST" enctype="multipart/form-data" >
                                
                            <input type="text" name="name" class="intro-x login__input form-control py-3 px-4 block" placeholder="First Name">
                            <input type="text" name="surname" class="intro-x login__input form-control py-3 px-4 block mt-4" placeholder="Last Name">

                            <div> 
                                <div class="mt-5"> <select data-placeholder="Select your favorite actors" class="tom-select w-full" name="category">
                                        <option value="1" disabled selected>Select Category</option>
                                        <% for (let field of fields) { %>
                                            <option value="<%= field.fieldName %>"> <%= field.fieldName %></option>
                                        
                                        <% } %>
                                    </select> </div>
                            </div> 
                            <!-- <input type="file" name="attachment" class="intro-x login__input form-control py-3 px-4 block" > -->

                            <label class="custom-file-upload login__input form-control py-3 px-4 block mt-4">
                                <input type="file" name="attachment" id="fileUpload" />
                                <div class="btn btn-secondary w-30 mr-2">Upload your cv</div>
                                <span id="fileUploadName">No file selected</span>
                            </label>
                            

                            <input type="email" name="email" class="intro-x login__input form-control py-3 px-4 block mt-4" placeholder="Email">
                            <input type="password" name="password" class="intro-x login__input form-control py-3 px-4 block mt-4" placeholder="Password">
                            <input type="password" name="confirmPassword" class="intro-x login__input form-control py-3 px-4 block mt-4" placeholder="Password Confirmation">
                        </div>
                        <div class="intro-x flex items-center text-slate-600 dark:text-slate-500 mt-4 text-xs sm:text-sm">
                            <!-- <input id="remember-me" type="checkbox" class="form-check-input border mr-2"> -->
                            <label class="cursor-pointer select-none" for="remember-me">if you have an account</label>
                            <a class="text-primary dark:text-slate-200 ml-1" href="/auth/login">Login</a>. 
                        </div>
                        <div class="intro-x mt-5 xl:mt-8 text-center xl:text-left">
                            <button type="submit" class="btn btn-primary py-3 px-4 w-full xl:w-32 xl:mr-3 align-top">Register</button>
                        </div>
                        </from>
                    </div>
                </div>
            
                <!-- END: Register Form -->
            </div>
        </div>
        <!-- BEGIN: Dark Mode Switcher-->
        
        <!-- END: Dark Mode Switcher-->
        
        <!-- BEGIN: JS Assets-->
        <script src="/dist/js/app.js"></script>
        <script>
            $('#fileUpload').on('change', function () {
                var fileName = $('input[type=file]').val().replace(/.*(\/|\\)/, '');
                $('#fileUploadName').text(fileName);
                $('#fileUploadName').css('color', '#303030');
            })
        </script>
        <!-- END: JS Assets-->
    </body>
</html>